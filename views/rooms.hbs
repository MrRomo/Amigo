<div class="col-md-9 mb-2 mx-auto">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <div>
                    <h2>Salas de {{user.username}}</h2>
                </div>
                <div>
                    <a href="/logout" class="btn btn-success">Cerrar Sesion <i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
        </div>
        <ul class="list-group list-group-flush">
            {{#if rooms}}
            {{#each rooms}}
            <li class="list-group-item d-inline d-flex justify-content-between ">
                <div class="w-50">
                    <a href="/@{{@root.user.username}}/{{code}}"
                        class="btn btn-primary btn-block text-uppercase">{{name}}</a>
                </div>
                <div class="">
                    <a class="btn btn-danger " href="/room/delete/{{_id}}"><i
                            class="fa fa-trash-alt"></i></a>
                </div>
            </li>
            {{/each}}
            {{else}}
            <h4 class="card-title text-center">No tienes salas creada <h4>
                    {{/if}}
        </ul>
    </div>
    <div class="card" style=" margin: auto; text-align: center;">
        <div class="card-body">
            <form action="/room/create" method="POST" class="form-signin">
                <div class="form-label-group form group">
                    <input type="text" id="name" name="name" class="form-control text-center text-uppercase"
                        placeholder="Nombre de la sala" required="true" maxlength="20">
                </div>
                <div class="form-group my-3">
                    <button class="btn btn-primary" type="submit">Crear una sala</button>
                </div>
            </form>
        </div>
    </div>
</div>